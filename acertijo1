<!-- 🎵 Sonido místico -->
<audio id="sonido-exito" src="https://cdn.pixabay.com/audio/2022/03/15/audio_9976b8a3f4.mp3" preload="auto"></audio>

<script>
const respuestas = {
  1: ["eco", "reverberación", "resonancia"],
  4: ["foto", "fotografía", "imagen", "retrato"],
  5: ["agujero", "hueco", "vacío"]
};

const pistasMostradas = {1: 0, 4: 0, 5: 0};
let acertijosResueltos = {1: false, 4: false, 5: false};

function mostrarPista(num) {
  const total = 3;
  if (pistasMostradas[num] < total) {
    pistasMostradas[num]++;
    document.getElementById(`pista${num}${String.fromCharCode(96 + pistasMostradas[num])}`).style.display = "block";
  }
}

function verificar(num) {
  const entrada = document.getElementById(`respuesta${num}`).value.trim().toLowerCase();
  if (respuestas[num].includes(entrada)) {
    acertijosResueltos[num] = true;
    document.getElementById(`acertijo${num}`).style.border = "3px solid #00cc66";
    const sonido = document.getElementById("sonido-exito");
    sonido.play();
    verificarGanador();
  } else {
    alert("❌ Intenta otra vez. ¡Pide una pista!");
  }
}

function verificarGanador() {
  if (Object.values(acertijosResueltos).every(v => v)) {
    document.getElementById("resultado").innerHTML = "🌟✨ ¡Felicidades! Has resuelto todos los acertijos del Pozo Mágico. ✨🌟<br><br>Tu clave secreta es: <strong>PzMg0000001</strong>";
  }
}
</script>

